<% provide(:title, "スポット一覧") %>
<div class="spot back">
  <div class="search">
    <h3>条件で探す</h3>
    <div class="search-forms">
      <%= form_with(url: spots_path, local: true, method: :get, class: "search-form") do |form| %>
        <%= form.select :area, [['東予', 1], ['中予', 2], ['南予', 3]], { include_blank: 'エリアを選択する', selected: params[:area]}, { class: "search-input" } %>
        <%= form.select :category, [['観光地', '観光地'], ['レジャー', 'レジャー'], ['歴史', '歴史'], ['お土産', 'お土産'], ['グルメ', 'グルメ']], { include_blank: 'ジャンルを選択する', selected: params[:category]}, { class: "search-input" }%>
        <%= form.text_field :keyword, placeholder: "キーワードを入力", class: "search-input", value: params[:keyword] %>
        <%= form.submit "検索", class: "search-btn" %>
      <% end %>
    </div>
  </div>
  <% @spots.each do |spot| %>
    <div class="spot-contents">
      <p><%= spot.name %></p>
      <p><%= spot.address %></p>
      <p><%= spot.content %></p>
      <span><%= link_to "くわしく見る", spot_path(spot.id) %></span>
    </div>
  <% end %>
</div>
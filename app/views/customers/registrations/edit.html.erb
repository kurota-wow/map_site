<div class="back">
  <h1>ユーザー編集</h1>
  <div class="box">
    <div class="box-inner">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>

        <div class="box-name">
          <%= f.label :name ,"名前"%><br />
          <%= f.text_field :name, autofocus: true %>
        </div>

        <div class="box-email">
          <%= f.label :email ,"メールアドレス"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="box-password">
          <%= f.label :password ,"パスワード"%>(6文字以上)
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="box-password">
          <%= f.label :password_confirmation ,"確認用パスワード"%><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="box-password">
          <%= f.label :current_password ,"現在のパスワード"%>
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>

        <div class="box-login">
          <%= f.submit "更新する" %>
        </div>
      <% end %>

      <%= link_to "←マイページに戻る", customer_path(current_customer.id) %>
    </div>
  </div>
</div>
